<!DOCTYPE html>
<html lang="en">
  <%- include('headMeta') %>
  <body>
    <div id="heading" class="box">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <% list.forEach(item => { %>
      <form action="/delete" method="post">
        <div class="item">
          <input
            type="checkbox"
            name="checkbox"
            value="<%= item._id %>"
            onchange="this.form.submit()"
          />
          <input type="hidden" name="listType" value="<%= listTitle %>" />
          <p><%= item.name %></p>
        </div>
      </form>
      <% }) %>
      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newToDoItem"
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit" name="listType" value="<%= listTitle %>">
          +
        </button>
      </form>
    </div>

    <%- include('footer') %>
  </body>
</html>
